{
  "name": "bookhub_server",
  "version": "1.0.0",
  "scripts": {
    "dev": "ts-node -r tsconfig-paths/register src/index.ts",
    "build": "tsc && tsc-alias",
    "start": "node dist/index.js",
    "migrate": "ts-node src/infra/umzug/index.ts",
    "migrate:up": "ts-node src/infra/umzug/index.ts up",
    "migrate:down": "ts-node src/infra/umzug/index.ts down --to 0",
    "migrate:create": "node -e \"const fs=require('fs');fs.writeFileSync(`src/migrations/${Date.now()}_${process.argv[1]}`,'');\"",
    "populate": "ts-node -r tsconfig-paths/register src/scripts/populate_db.ts",
    "make-books-available": "ts-node -r tsconfig-paths/register src/scripts/make_books_available.ts",
    "make-all-books-available": "ts-node -r tsconfig-paths/register src/scripts/make_all_books_available.ts",
    "check-books-items": "ts-node -r tsconfig-paths/register src/scripts/check_books_with_items.ts",
    "add-items-to-books": "ts-node -r tsconfig-paths/register src/scripts/add_items_to_books_without_items.ts",
    "jwt-key": "node -e \"console.log(require('crypto').randomBytes(32).toString('hex'))\""
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^2.0.0",
    "@types/pg": "^8.15.5",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "node-cron": "^4.2.1",
    "pg": "^8.16.3",
    "striptags": "^3.2.0",
    "umzug": "^3.8.2",
    "zod": "^4.0.15"
  }
}
